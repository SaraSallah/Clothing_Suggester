<resources>
    <!-- Base application theme. -->
    <style name="Theme.Clothing_Suggester" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_100</item>
        <item name="colorPrimaryVariant">@color/primary_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>

    <style name="HeaderMainStyle">
        <item name="android:textColor">@color/secondary_900</item>
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>

    <style name="HeaderCityStyle">
        <item name="android:textColor">@color/secondary_900</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="HeaderDateStyle">
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/padding_medium</item>
    </style>
    <style name="HeaderSuggStyle">
        <item name="android:textColor">@color/secondary_200</item>
        <item name="android:textSize">@dimen/padding_large</item>
    </style>
</resources>